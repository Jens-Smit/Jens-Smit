<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Welcome{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
    
    
    <script src="{{asset('js/jquery-3.5.1.slim.min.js')}}"></script>
   <script src="{{asset('js/jquery-3.6.3.min.js')}}"></script>
    <script src="{{asset('js/bootstrap.min.js')}}" ></script> 
    <!-- js für Textareas-->
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
        {% endblock %}
  <link rel="stylesheet" href="{{asset('css/bootstrap.min.css')}}">
  <link rel="stylesheet" href="{{asset('css/all.min.css')}}">
   <link rel="stylesheet" href="{{asset('css/css.css')}}">
   


</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light shadow">
  <a class="navbar-brand" href="#"><img style='    height: 40px;' src="{{asset('img/logo_white.png')}}" class='logo'></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">About</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Contact</a>
      </li>
    </ul>
  </div>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
     <div class="dropdown-menu" style="position: absolute;    margin: 0px 0px 0px -100px" aria-labelledby="userDropdown">
     </a>     
    {% if is_granted('IS_AUTHENTICATED_FULLY')  %}
       {{ app.user.vorname }}
      
      
           <a class="dropdown-item" href="{{ path('app_user_show', {'id': app.user.id}) }}"><i class="fa fa-cog"></i>&ensp;Settings</a>  
           <hr>
        <a class="dropdown-item" href="{{path('app_logout')}}"><i class="fa fa-sign-out"></i>&ensp;Logout</a>
        
         <div class="form-check form-switch"><input  class="form-check-input"  type="checkbox" role="switch" id="dark-mode-switch" /></div> 
     
        
      {% else %}
     
        <a class="dropdown-item" href="{{path('app_login')}}"><i class="fa fa-sign-in"></i>&ensp;Login</a>
        <a class="dropdown-item" href="{{path('reg')}}"><i class="fa fa-plus"></i>&ensp;Registrieren</a>
        <div class="form-check form-switch"><input  class="form-check-input"  type="checkbox" role="switch" id="dark-mode-switch" /></div> 
     {% endif %}
      </div>
    </li>
  </ul>
</nav>

  
  <!-- Page -->
  <div class="container-fluid">
    <div class="row" style="flex-wrap: nowrap;">
     
{% if is_granted('IS_AUTHENTICATED_FULLY')  %}
		<!-- Sidebar -->
		<div  id="sidebar" style="max-width: 150px;">
      <button class="btn w-100" id="sidebar_toggle">
        <i id="silebar_icon"class="fa fa-chevron-right"></i>
      </button>
		
		  <div class=" pt-9 sidebar-collapsed sidebar-height">
			<ul class="nav flex-column">
			  <li class="nav-item">
				<a class="nav-link active d-flex"  href="{{path('app_company_index')}}"><i class="fa fa-building"></i> <p style="margin:-5px 0px 0px 5px;" class='link_text'>Company</p></a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link d-flex" href="{{path('app_objekt_index')}}"><i class="fa fa-store"></i>  <p style="margin:-5px 0px 0px 5px;" class='link_text'>Objket</p></a>
			  </li>
        <li class="nav-item">
				<a class="nav-link d-flex"   href="{{path('app_user_index')}}"><i class="fa fa-user"></i>  <p style="margin:-5px 0px 0px 5px;" class='link_text'>User</p></a>
			  </li>
			  <li class="nav-item">
				<a class="nav-link d-flex"   href="{{path('app_vertrag')}}"><i class="fa fa-file-contract"></i>  <p style="margin:-5px 0px 0px 5px;" class='link_text'>Verträge</p></a>
			  </li>
        {% if app.user.objekt != null %}
          <li class="nav-item">
            <a class="nav-link d-flex"   href="{{ path('app_reservations', {'id': app.user.objekt.id}) }}"><i class="fa fa-cutlery"></i>  <p style="margin:-5px 0px 0px 5px;" class='link_text'>{{app.user.objekt.name}}</p></a>
          </li>
        {% elseif app.user.Company != null %}
          {% for objekt in  app.user.Company.Objekts %}  
            <li class="nav-item">
              <a class="nav-link d-flex"   href="{{ path('app_reservations', {'id': objekt.id}) }}"><i class="fa fa-cutlery"></i>  <p style="margin:-5px 0px 0px 5px;" class='link_text'>{{objekt.name}}</p></a>
            </li>
          {% endfor %} 
        {% else %}
        {% endif %}
			</ul>

		  </div>
		  <!-- Toggle-Schaltfläche -->
		
		</div>
 {% endif %}

      <!-- Content -->
      <div class="col-10 pt-5">
      {% for type, messages in app.session.flashbag.all %}
    {% for message in messages %}
        <div class="alert alert-{{ type }}">{{ message|trans }}</div>
    {% endfor %}
{% endfor %}
       {% block body %}{% endblock %}
      </div>
    
    </div>
  </div>
  
  <!-- Footer -->
  <footer class=" py-3 mt-5 " style="    margin: 0px !important;">
    <div class="container">
      <p>Copyright &copy; Meine Website 2021</p>
    </div>
  </footer>
  


	
	
<script>
$(document).ready(function() {



  $('a[data-insert-var]').click(function() {
                var variable = $(this).data('insert-var');
                console.log(variable);
                CKEDITOR.instances.form_text.insertText(variable);
                console.log("finisch");
                var editor = CKEDITOR.instances.form_text;
                var content = editor.getData();
                content = content.replace(/(Var_[a-zA-Z0-9]+)/g, '<span style="background-color:yellow">$1</span>');
                editor.setData(content);
                $('#varModal').modal('hide');
            });
  const darkModeSwitch = document.getElementById('dark-mode-switch');

  darkModeSwitch.addEventListener('change', (event) => {
    if (event.target.checked) {
      document.documentElement.classList.add('dark-mode');
    } else {
      document.documentElement.classList.remove('dark-mode');
    }
  });
    $('#sidebar').addClass('sidebar-collapsed');
    $(".link_text").hide();
    $('#sidebar_toggle').click(function() {
    if($('#sidebar').hasClass('sidebar-collapsed')) {
      $('#sidebar').removeClass('sidebar-collapsed');
	  $(".link_text").show();
	  $("#silebar_icon").removeClass('fa-chevron-right').addClass('fa-chevron-left');
    } else {
      $('#sidebar').addClass('sidebar-collapsed');
	  $(".link_text").hide();
	  $("#silebar_icon").removeClass('fa-chevron-left').addClass('fa fa-chevron-right');
    }
  });
});

</script>
</body>
</html>


