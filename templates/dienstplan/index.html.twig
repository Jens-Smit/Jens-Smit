{% extends 'base.html.twig' %}

{% block title %}Dienstplan index{% endblock %}

{% block body %}
    <h1>Dienstplan index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Bezeichnung</th>
                <th>Start</th>
                <th>Ende</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dienstplan in dienstplans %}
            <tr>
                <td>{{ dienstplan.id }}</td>
                <td>{{ dienstplan.bezeichnung }}</td>
                <td>{{ dienstplan.start ? dienstplan.start|date('Y-m-d') : '' }}</td>
                <td>{{ dienstplan.ende ? dienstplan.ende|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_dienstplan_show', {'id': dienstplan.id}) }}">show</a>
                    <a href="{{ path('app_dienstplan_edit', {'id': dienstplan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dienstplan_new') }}">Create new</a>
{% endblock %}
