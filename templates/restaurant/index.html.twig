{% extends 'public_base.html.twig' %}

{% block title %}Restaurants{% endblock %}

{% block body %}
    
<div class="container">
<div class="row">
	

	<div class="col-lg-3  col-md-6 col-sm-12 ">
	<div class="card card-info">
		{{form(Avform)}}
	</div>
	</div>
	<div class="col-lg-9  col-md-6 col-sm-12 ">
	<div class="card card-info">
		<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
 		<div class="carousel-inner">
		<div class="carousel-item active">
      			<img class="d-block w-100" src="{{asset('images/163baf583e67831ebff279467d72dd5b.jpg')}}" style='max-height:300px; object-fit: cover;' alt="First slide">
				 <div class="carousel-caption  d-md-block">
				 
					<h2>test</h2>
					<p>batensatz 1</p>
				
				</div>
    		</div>
		{% for objekt in objekts %}
   			<div class="carousel-item ">
      			<img class="d-block w-100" src="{{asset('images/' ~ objekt.bild)}}" style='max-height:300px; object-fit: cover;' alt="First slide">
				 <div class="carousel-caption d-md-block">
				 
					<h2>{{objekt.name}}</h2>
					<p>{{objekt.website}}</p>
					
				</div>
    		</div>
		{% endfor %}	
			
  		</div>
	</div>

		
	</div>
</div>
</div>
<!-- Playlist section -->
	<section class="playlist-section spad">
		<div class="container">
			
           <h1>{{ info }}</h1>
          
			</div>
			<div class="container">
				<ul class="nav nav-pills nav-fill">
                    {% for category in categories %}
                    <li class="control nav-item nav-link" data-filter=".{{category.name}}">{{category.name}}</li>
                    {% endfor %}
                    <li class="control nav-item nav-link" data-filter="all">Alle</li>
				</ul>
			</div>
                                                        
			<div class="clearfix"></div>
			<div class="row playlist-area" id="myObjekt">
             {% for objekt in objekts %}
  
    
				<div class=" mix col-lg-3 col-md-4 col-sm-6 {{objekt.categories}}">
					<div class="card playlist-item">
						<img src="{{asset('images/' ~ objekt.bild)}}" class="img-fluid">
						<h5>{{objekt.name}} 
						</h5>
						<span class="badge badge-info navbar-badge text-light">
						<i class="fas fa-star" aria-hidden="true"></i>
						<i class="fas fa-star" aria-hidden="false"></i>
						<i class="fas fa-star" aria-hidden="false"></i>
						<i class="fas fa-star" aria-hidden="false"></i>
						</span>

                        <p>{{objekt.Categories}}</p>
						<p>{{objekt.id}}</p>
						<h6>Mail</h6>
						<p>{{objekt.mainmail}}</p>
						<h6>Website</h6>
						<p>{{objekt.website}}</p>
						<h6>Telefon</h6>
						<p>{{objekt.telefon}}</p>
						<h6>Adresse</h6>
						<p>{{objekt.adresse}}<br>{{objekt.plz}} {{objekt.ort}}</p>
                        <a href="{{ path('app_restaurant_availability', {'id': objekt.id}) }}" class="btn btn-info">Verfügbarkeit Prüfen</a>
					</div>
				</div>
		
		{% endfor %} 
             
			</div>
		</div>
	</section>
	<!-- Playlist section end -->
</div>
{% endblock %}
