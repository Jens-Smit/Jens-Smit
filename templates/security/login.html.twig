{% extends 'public_base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">Nutzerdaten unbekannt! Bitte pr√ºfen Sie die Einagbe.</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 p-1 d-flex">
             <p class='text-success online_icon' >online <i class="fa fa-check" aria-hidden="true"></i> </p>
           
             {{ app.user.userIdentifier }}<a style='margin-left:10px;' href="{{ path('app_logout') }}"> Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
<br>
    <button class="btn btn-lg btn-info  w-100 text-light" type="submit">
        Sign in
    </button>
</form><br>
<a style='    display: flex;   justify-content: center;' class="btn w-100 btn-lg infoSecunder" href="{{path('password_reset')}}"><i class="fa fa-bolt"></i>  <p style="margin:-5px 0px 0px 5px;" class=''>Passwort vergessen?</p></a>
			  
{% endblock %}
